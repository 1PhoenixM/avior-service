			engine: 'jade',
			linker: true,
			adapter: 'sails-disk',
			_maxHops: 100
		},


		// Configurable generator definitions
		modules: {
			
			// App
			new: 'sails-generate-new',

			// App Structure
			backend: 'sails-generate-backend',
